<Window
    x:Class="GetMyIP.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GetMyIP"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Get My IP"
    Height="450"
    Closing="Window_Closing"
    FontSize="15"
    KeyDown="Window_KeyDown"
    Left="{Binding WindowLeft, Source={x:Static local:UserSettings.Setting}}"
    SizeToContent="WidthAndHeight"
    Top="{Binding WindowTop, Source={x:Static local:UserSettings.Setting}}"
    Topmost="{Binding KeepOnTop, Source={x:Static local:UserSettings.Setting}}"
    mc:Ignorable="d">

    <!--#region Styles-->
    <Window.Resources>
        <Style x:Key="{x:Type TextBox}" TargetType="TextBox">
            <Setter Property="Height" Value="25" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style TargetType="ListViewItem">
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                    <Setter Property="Background" Value="White" />
                </Trigger>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="WhiteSmoke" />
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsSelected" Value="True" />
                    </MultiTrigger.Conditions>
                    <MultiTrigger.Setters>
                        <Setter Property="Background" Value="ALiceBlue" />
                        <Setter Property="BorderBrush" Value="DodgerBlue" />
                        <Setter Property="Foreground" Value="Black"/>
                    </MultiTrigger.Setters>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <!--#endregion-->

    <Grid x:Name="Grid1" PreviewMouseWheel="Grid1_PreviewMouseWheel" Background="WhiteSmoke">
        <!--#region Menu-->
        <DockPanel LastChildFill="False">
            <Menu
                Height="27"
                DockPanel.Dock="Top"
                FontSize="14">
                <MenuItem Header="_File">
                    <MenuItem
                        Name="mnuCopyToClip"
                        Click="MnuCopyToClip_Click"
                        Header="Copy to _Clipboard">
                        <MenuItem.Icon>
                            <Image Source="Images\clipboard.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Name="mnuCopySelToClip"
                        Click="MnuCopySelToClip_Click"
                        Header="Copy Selected to _Clipboard">
                        <MenuItem.Icon>
                            <Image Source="Images\clipboard.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Name="mnuSaveText"
                        Click="MnuSaveText_Click"
                        Header="Save to _Text File">
                        <MenuItem.Icon>
                            <Image Source="Images\document-text.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem
                        Name="mnuExit"
                        Click="MnuExit_Click"
                        Header="Exit"
                        InputGestureText="Alt+F4">
                        <MenuItem.Icon>
                            <Image Source="Images\door-open-in.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Options">
                    <MenuItem
                        Name="mnuShowMap"
                        Click="MnuShowMap_Click"
                        Header="Show on _Map">
                        <MenuItem.Icon>
                            <Image Source="Images\globe-green.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator />
                    <MenuItem
                        Header="_Include IPv6 Addresses"
                        IsCheckable="True"
                        IsChecked="{Binding IncludeV6, Source={x:Static local:UserSettings.Setting}}" />
                    <Separator />
                    <MenuItem
                        Name="mnuShadeAlt"
                        Header="Shade _Alternate Rows"
                        IsCheckable="True"
                        IsChecked="{Binding ShadeAltRows, Source={x:Static local:UserSettings.Setting}, Mode=TwoWay}"
                        StaysOpenOnClick="False" />
                    <Separator />
                    <MenuItem
                        Header="_Keep on Top"
                        IsCheckable="True"
                        IsChecked="{Binding KeepOnTop, Source={x:Static local:UserSettings.Setting}, Mode=TwoWay}"
                        StaysOpenOnClick="False" />
                    <MenuItem Header="_Zoom">
                        <MenuItem
                            Click="GridSmaller_Click"
                            Header="_Smaller"
                            InputGestureText="Ctrl+NumPad -"
                            StaysOpenOnClick="True">
                            <MenuItem.Icon>
                                <Image Source="/Images/magnifier--minus.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            Click="GridLarger_Click"
                            Header="_Larger"
                            InputGestureText="Ctrl+NumPad +"
                            StaysOpenOnClick="True">
                            <MenuItem.Icon>
                                <Image Source="/Images/magnifier--plus.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <Separator />
                        <MenuItem
                            Click="GridReset_Click"
                            Header="_Reset"
                            InputGestureText="Ctrl+NumPad 0"
                            StaysOpenOnClick="True">
                            <MenuItem.Icon>
                                <Image Source="/Images/magnifier-zoom-actual-equal.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem.Icon>
                            <Image Source="/Images/magnifier.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
                <MenuItem Header="_Help">
                    <MenuItem
                        Name="mnuAbout"
                        Click="MnuAbout_Click"
                        Header="_About"
                        InputGestureText="F1">
                        <MenuItem.Icon>
                            <Image Source="Images\information.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem
                        Name="mnuReadMe"
                        Click="MnuReadMe_Click"
                        Header="_View ReadMe File">
                        <MenuItem.Icon>
                            <Image Source="Images\document-text.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="_Debug">
                        <MenuItem
                            Name="mnuViewTemp"
                            Click="ViewTemp_Click"
                            Header="View _Log File">
                            <MenuItem.Icon>
                                <Image Source="/Images/document-list.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem.Icon>
                            <Image Source="/Images/bug.png" />
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
        </DockPanel>
        <!--#endregion-->
        <StackPanel Margin="0,25" Background="Transparent">
            <!--#region Internal IP Address Info-->
            <GroupBox
                Margin="15,10"
                Padding="0"
                FontWeight="SemiBold"
                Header="IP Address Info">
                <ListView
                    x:Name="lvInternalInfo"
                    Padding="0,0"
                    Background="Transparent"
                    BorderBrush="Gainsboro"
                    BorderThickness="1"
                    FontWeight="Normal"
                    ItemsSource="{Binding IPInfos}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="160"
                                DisplayMemberBinding="{Binding Parameter}"
                                Header="Parameter" />
                            <GridViewColumn
                                Width="220"
                                DisplayMemberBinding="{Binding Value}"
                                Header="Value" />
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <Setter Property="Padding" Value="5,0,0,0" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                        </GridView>
                    </ListView.View>
                </ListView>
                <!--#region Context Menu-->
                <GroupBox.ContextMenu>
                    <ContextMenu FontSize="14">
                        <MenuItem
                            Click="MnuCopyToClip_Click"
                            Header="Copy All to Clipboard" />
                        <Separator />
                        <MenuItem
                            Click="MnuCopySelToClip_Click"
                            Header="Copy Selected to Clipboard" />
                    </ContextMenu>
                </GroupBox.ContextMenu>
            </GroupBox>
            <!--#endregion-->

            <!--#region Geolocation info-->
            <GroupBox
                Name="Gbox2"
                Margin="15,0"
                Padding="0,5,0,0"
                FontWeight="SemiBold"
                Header="External IP &amp; Geolocation Info"
                ToolTip="Geolocation information from ip-api.com">
                <ListView
                    x:Name="lvGeoInfo"
                    Padding="0,0"
                    Background="Transparent"
                    BorderBrush="Gainsboro"
                    BorderThickness="1"
                    FontWeight="Normal"
                    ItemsSource="{Binding IPInfos}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn
                                Width="auto"
                                DisplayMemberBinding="{Binding Parameter}"
                                Header="Parameter" />
                            <GridViewColumn
                                Width="auto"
                                DisplayMemberBinding="{Binding Value}"
                                Header="Value" />
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="HorizontalContentAlignment" Value="Left" />
                                    <Setter Property="Padding" Value="5,0,0,0" />
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>
                        </GridView>
                    </ListView.View>
                </ListView>
                <!--#endregion-->

                <!--#region Context Menu-->
                <GroupBox.ContextMenu>
                    <ContextMenu FontSize="14">
                        <MenuItem
                            Click="MnuCopyToClip_Click"
                            Header="Copy Allp to Clipboard" />
                        <Separator />
                        <MenuItem
                            Click="MnuCopySelToClip_Click"
                            Header="Copy Selected to Clipboard" />
                    </ContextMenu>
                </GroupBox.ContextMenu>
            </GroupBox>
            <!--#endregion-->
        </StackPanel>
    </Grid>
</Window>