<UserControl x:Class="GetMyIP.Pages.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GetMyIP"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="450"
             d:DesignWidth="600"
             TextElement.FontSize="14"
             TextElement.FontWeight="Regular"
             TextElement.Foreground="{DynamicResource MaterialDesignBody}"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto">

    <Grid>
        <!--#region Card-->
        <materialDesign:Card Margin="1,0" Padding="20,21,0,10"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             UniformCornerRadius="0">
            <Grid>
                <!--#region Row & Column definitions-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="35" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="240" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <!--#endregion-->

                <StackPanel Grid.Row="0" Grid.Column="0"
                            Orientation="Horizontal">
                    <Label Width="110" Content="Initial View" />
                    <ComboBox x:Name="cbxView"
                              Width="100" Margin="0,0,0,5"
                              HorizontalAlignment="Left"
                              materialDesign:HintAssist.Hint="View"
                              SelectedIndex="{Binding InitialPage,
                                                      Source={x:Static local:UserSettings.Setting}}"
                              Style="{StaticResource MaterialDesignComboBox}">
                        <ComboBox.Items>
                            <ComboBoxItem Content="Internal" />
                            <ComboBoxItem Content="External" />
                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="0" Grid.Column="1"
                            Orientation="Horizontal">
                    <Label Width="70" Content="Theme" />
                    <ComboBox x:Name="cbxMode"
                              Width="100" Margin="0,0,0,5"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding Source={StaticResource enumThemeType}}"
                              SelectedIndex="{Binding DarkMode,
                                                      Source={x:Static local:UserSettings.Setting}}"
                              Style="{StaticResource MaterialDesignComboBox}" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Label Width="110" Content="UI Size" />
                    <ComboBox x:Name="cbxSize"
                              Width="100" Margin="0,0,0,5"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding Source={StaticResource enumUISize}}"
                              SelectedIndex="{Binding UISize,
                                                      Source={x:Static local:UserSettings.Setting}}"
                              Style="{StaticResource MaterialDesignComboBox}" />
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="1"
                            Orientation="Horizontal">
                    <Label Width="70" Content="Accent" />
                    <ComboBox x:Name="cbxColor"
                              Width="100" Margin="0,0,0,5"
                              HorizontalAlignment="Left"
                              ItemsSource="{Binding Source={StaticResource enumAccentColors}}"
                              MaxDropDownHeight="140"
                              SelectedIndex="{Binding PrimaryColor,
                                                      Source={x:Static local:UserSettings.Setting}}"
                              Style="{StaticResource MaterialDesignComboBox}" />
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0"
                            HorizontalAlignment="Left"
                            Orientation="Horizontal">
                    <Label Width="110" Content="Map Provider" />
                    <ComboBox x:Name="cbxMap"
                              Width="100" Margin="0,0,0,5"
                              HorizontalAlignment="Left"
                              materialDesign:HintAssist.Hint="Size"
                              SelectedIndex="{Binding MapProvider,
                                                      Source={x:Static local:UserSettings.Setting}}"
                              Style="{StaticResource MaterialDesignComboBox}">
                        <ComboBox.Items>
                            <ComboBoxItem Content="Google Maps" />
                            <ComboBoxItem Content="Bing Maps" />
                            <ComboBoxItem Content="LatLong.net" />

                        </ComboBox.Items>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <CheckBox x:Name="tbHistOnStart"
                              HorizontalAlignment="Left"
                              materialDesign:CheckBoxAssist.CheckBoxSize="22"
                              IsChecked="{Binding IncludeV6,
                                                  Source={x:Static local:UserSettings.Setting}}" />
                    <Label Margin="10,3,0,0"
                           Content="Include internal IPV6 addresses" />
                </StackPanel>

                <StackPanel Grid.Row="5" Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <CheckBox HorizontalAlignment="Left"
                              materialDesign:CheckBoxAssist.CheckBoxSize="22"
                              IsChecked="{Binding KeepOnTop,
                                                  Source={x:Static local:UserSettings.Setting}}" />
                    <Label Margin="10,3,0,0"
                           Content="Keep GetMyIP on top of other windows" />
                </StackPanel>

                <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                            Orientation="Horizontal">
                    <CheckBox HorizontalAlignment="Left"
                              materialDesign:CheckBoxAssist.CheckBoxSize="22"
                              IsChecked="{Binding IncludeDebug,
                                                  Source={x:Static local:UserSettings.Setting}}" />
                    <Label Margin="10,3,0,0"
                           Content="Include debug level messages in log file" />
                </StackPanel>
            </Grid>
        </materialDesign:Card>
        <!--#endregion-->
    </Grid>
</UserControl>
